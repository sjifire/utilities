# ESO Suite Credentials
# Used for scraping incident data and personnel
ESO_USERNAME=your_eso_username
ESO_PASSWORD=your_eso_password
ESO_AGENCY=your_agency_code

# Microsoft Graph API (Optional - for future direct API access)
# Create an App Registration in Azure Portal > Microsoft Entra ID
MS_GRAPH_TENANT_ID=your_tenant_id
MS_GRAPH_CLIENT_ID=your_client_id
MS_GRAPH_CLIENT_SECRET=your_client_secret

# Power Automate HTTP Trigger URL
# Get this from your Power Automate flow's HTTP trigger
# Keep this secret - it allows triggering your flow
POWER_AUTOMATE_URL=https://prod-XX.westus.logic.azure.com:443/workflows/...

# Microsoft Form Configuration
# Get the Form ID from the form's share URL
MS_FORM_ID=your_form_id

# Optional: Question IDs for specific form fields
# Get these from Power Automate's "Get form details" action
MS_FORM_APPARATUS_QUESTION_ID=
MS_FORM_PERSONNEL_QUESTION_ID=
